@model List<ComfyLearn.Models.ClanakKomentari>

@foreach (var item in Model)
{
    <div class="row border-bottom border-dark">
        <div class="col-sm-12 col-md-6 col-lg-7 pb-4">
            <div class="comment mt-4 text-justify float-left">
                <img src="@item.korisnik.Slika" alt="" class="rounded-circle col-2" width="40" height="40">
                <h4>@item.korisnik.UserName</h4> <span>- @item.DatumKreiranja.ToShortDateString()</span> <br>
                <p>@Html.Raw(item.Komentar)</p>

            </div>

        </div>

        <div class="align-center mt-5 col-3">
            @if (User.IsInRole("Admin"))
            {
                <button data-toggle="modal" data-target="#myModal" class="btn btn-danger ukloniKomentarBtn" data-id="@item.Id" type="button"><i class="fas fa-trash"></i></button>
            }
        </div>
    </div>
}


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog-centered modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:rebeccapurple; color:white;">
                Da li ste sigurni da želite obrisati ovaj komentar?
            </div>
            <div class="modal-body" id="modalBody">

            </div>
            <div class="modal-footer" style="background-color:rebeccapurple; color:white;">
                <button type="button" style="color:white;" class="btn btn-default" data-dismiss="modal" onclick="$('.modal-backdrop').remove();">Odustani</button>
            </div>
        </div>
    </div>
</div>
