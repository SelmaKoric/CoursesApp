@model ComfyLearn.Models.Akcija

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}

<h2>Izbriši sniženje</h2>

<h3>Da li ste sigurni da želite izbrisati ovo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Popust
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class = "col-sm-2">
            Minimalni broj kurseva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinAmount)
        </dd>
       
        <dt class = "col-sm-2">
            Aktivan
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> | 
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>
