@model ComfyLearn.Models.Korpa

<form method="post" asp-action="DodajUKorpu">
    <div class="embed-responsive embed-responsive-16by9 z-depth-1-half">

        <iframe width="560" height="315" src="@Model.course.PreviewVideo.Replace("watch?v=", "embed/")" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

    <div>
        <div class="col-8 mt-3 offset-3">
            <input asp-for="courseId" hidden/>
            <h4 class="offset-2 mb-4">About this course</h4>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="course.Naziv" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-8">
                    <input asp-for="course.Naziv" readonly style="background-color: white; border: none" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="text-info font-weight-bold">Kategorija</label>
                </div>
                <div class="col-8">
                    <input asp-for="course.kategorija.Naziv" readonly style="background-color: white; border: none" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="course.Opis" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.course.Opis)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="text-info font-weight-bold">Trajanje (sati)</label>
                </div>
                <div class="col-8">
                    <input asp-for="course.Trajanje" readonly style="background-color: white; border: none" class="form-control" /> 
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="text-info font-weight-bold">Broj lekcija</label>
                </div>
                <div class="col-8">
                    <input asp-for="course.BrojLekcija" readonly style="background-color:white; border:none" class="form-control" />
                </div>
            </div>

            
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="course.Certifikat" class="text-info font-weight-bold"></label>
            </div>
            <div class="col-8">
                <input value="@(Model.course.Certifikat==true ? "DA" : "NE")" readonly style="background-color:white;  border:none" class="form-control" />
            </div>
        </div>
            

            <div class="form-group row">
                <div class="col-8">
                    <button type="submit" class="btn btn-primary form-control">
                        Add to cart
                        <i class="fas fa-cart-plus ml-2" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
       
    </div>
</form>

