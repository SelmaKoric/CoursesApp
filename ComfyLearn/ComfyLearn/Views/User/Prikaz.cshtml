@model IEnumerable<ComfyLearn.Models.User>

@{
    ViewData["Title"] = "Prikaz";
    Layout = "_LayoutAdmin";
}

<h2>Lista korisnika</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.PhoneNumber)
            </td>
            @if (item.LockoutEnd == null || item.LockoutEnd <= DateTime.Now)
            {
                <td>
                    <a class="btn btn-success text-white" asp-action="Lock" asp-route-Id="@item.Id"><i class="fas fa-lock-open"></i></a>
                </td>
            }
            else
            {
                <td>
                    <a class="btn btn-danger text-white" asp-action="UnLock" asp-route-Id="@item.Id"><i class="fas fa-lock"></i></a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>
